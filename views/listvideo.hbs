
<div class="container content-wrap">
    <div class="mb-4">
        <a href="/" class="btn btn-secondary">‚Üê Back To Homepage</a>
    </div>

        {{#if error}}
        <p>{{error}}</p>
        {{else}}
            <div class="col">
                <iframe width="640" height="360" src="https://www.youtube.com/embed/{{meta.id}}" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="col-6">
                <h4 class="h5 mb-4 font-weight-bold">Download Links <small>(multiple sizes and formats)</small></h4>
				<table style="width:100%" border="1">
				 <tr> <th>Resolution</th> <th>FileSize</th> <th>Download</th> </tr> 
				 
				 {{#each meta.formats}}
					<tr> 
						<td> <a href="#" rel="nofollow">{{format_note}} - Ext: {{ext}}</td> 
						<td>{{filesize}} <span class="label label-primary"></a> </td> 
						<td> <button class="download-button" value="{{format_id}}">Download</button>
						</td> 
					</tr>
				 {{/each}}
				 </table>
            </div>
        {{/if}}
</div>
<script>
var elems = document.getElementsByClassName('download-button');
for (var i = 0; i < elems.length; i++) {
  elems[i].addEventListener('click', function() {
    redirectVideo(this.value);
  });
};

function redirectVideo(format_id) {
  window.location.href = `downloadvideo?format_id=${format_id}&video_id={{meta.id}}`;
}
</script>
